<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="75dp"
    tools:context="com.softwareengineerandroid.davidmata.doctorsconferences.ConferenceDetailFragment">


    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/fragConfDetail_importance"
        android:text="7.2"
        android:background="@drawable/magnitude_cicle"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:layout_marginEnd="15dp"
        android:textColor="@android:color/white"
        />
    <ScrollView
        android:id="@+id/fragConfDetail_scrollView_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/fragConfDetail_importance"
        android:layout_alignBottom="@id/fragConfDetail_importance">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15dp"

            android:id="@+id/fragConfDetail_tv_title"/>

    </ScrollView>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragConfDetail_scrollView_Title"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="new Text"
            android:id="@+id/fragfragConfDetail_tv_TextBody"
            android:textSize="18dp"
            />
    </ScrollView>

</RelativeLayout>

